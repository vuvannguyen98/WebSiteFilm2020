@using Models.EF;
@model PagedList.IPagedList<Category>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section jsFooter{
<script src="~/assets/admin/js/controller/cateController.js"></script>
}


<div class="main-content">
    <center>
        <div>
            <h3 style="background-color:lavender">DANH SÁCH THỂ LOẠI </h3>
        </div>
    </center>
    <div class="table-data__tool">
        <div class="table-data__tool-left">
            <div class="rs-select2--light rs-select2--md">
                <form class="form-header" action="" method="POST">

                    <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Tìm kiếm" class="au-input au-input--xl">
                </form>

            </div>
        </div>
        <div class="table-data__tool-right">


            <button onclick="Them()" type="button" class="au-btn au-btn-icon au-btn--green au-btn--small" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>&nbsp;&nbsp;Thêm mới</button>

            <a href="/Admin/Movie"><button class="au-btn au-btn-icon au-btn--green au-btn--small"><i class="fa fa-refresh"></i>&nbsp;&nbsp;LÀM MỚI</button></a>


        </div>
    </div>

    <div class="table-responsive table--no-card m-b-30">
        <div class="table-responsive table-responsive-data2">
            @if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                    @TempData["AlertMessage"]
                </div>
            }

            <table class="table table-data2" id="myTable">
                <thead>
                    <tr>

                        <th>Tên thể loại</th>
                        <th>Trạng Thái</th>
                        <th>Ngày tạo</th>
                        <th>Chức năng</th>

                    </tr>
                </thead>
                <tbody>
                    @if (@Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr style="text-align:left;" id="row_@item.CategoryID" class="tr-shadow">
                                <td style="display:none;">@item.CategoryID</td>

                                <td class="tr-shadow">@item.NameCategory</td>
                                <td class="tr-shadow"><a href="#" class="btn-active" data-id="@item.CategoryID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "<strong>Huỷ Kích Hoạt</strong>")</a></td>
                                <td class="tr-shadow">@item.CreatedDate</td>

                                <td>
                                    <button type="button" onclick="Sua(this)" data-toggle="modal" data-target="#myModal" title="Sửa" class="btn btn-outline-success">
                                        <i class="fa fa-pencil">Sửa</i>
                                    </button>
                                    &nbsp; &nbsp; &nbsp;
                                    <button class="btn btn-outline-warning">
                                        <i class="fa fa-trash-o">
                                            @Ajax.ActionLink("Xoá", "Delete", new { @id = item.CategoryID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xoá " + @item.NameCategory + "?",
                                           OnComplete = "$('row_" + @item.CategoryID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                                        </i>

                                    </button>
                                </td>
                            </tr>

                        }
                    }
            </table>
            <ul class="pagination modal-6" style="width:250px">

                <li> @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</li>

            </ul>
        </div>
    </div>
    @Html.Partial("_CategoryModal")
    <script>
        function Them() {
            SetNull();
            $("#bt_sua").hide();
            $("#bt_them").show();
        };
        function SetNull() {
            $("#NameAds").val('');
        };
        function Xoa(el) {
            var id = el.parentNode.parentNode.cells[0].textContent;
            $.ajax({
                url: '/Category/delList/?id=' + id,
                type: 'POST',
                dataType: 'json',
                success: function () {
                    alert("Xóa thành công");
                    window.location.reload();
                },
                error: function () {
                    alert("Xóa thất bại");
                    window.location.reload();
                }
            });
        }
        function Sua(el) {
            event.preventDefault();
            $("#bt_sua").show();
            $("#bt_them").hide();
            var id = el.parentNode.parentNode.cells[0].textContent;
            $.ajax({
                url: '/Category/getList/?id=' + id,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var json = JSON.parse(data);
                    $("#CategoryID").val(json.CategoryID);
                    $("#NameCategory").val(json.NameCategory);
                    $("#Status").val(json.Status);

                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }
    </script>

